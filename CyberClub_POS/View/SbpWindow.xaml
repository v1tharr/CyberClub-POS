<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberClub_POS.View"
        xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="CyberClub_POS.View.SbpWindow"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown4"
        Title="Предоставление QR-кода" Height="432" Width="373">

    <Border BorderThickness="0" Opacity="0.95">
        <Grid>
        <Image Source="/Assets/img_QR_sbp.jpg" Margin="0,-1,0,0" />
        <Rectangle Margin="0,0,0,388">
            <Rectangle.Fill>
                <SolidColorBrush Color="#23262B" />
            </Rectangle.Fill>
        </Rectangle>
            <Button x:Name="Min_QR_btn"
        Style="{StaticResource MinBtnStyle}"
        Margin="0,6,50,0"
         Click="Min_QR_btn_Click" RenderTransformOrigin="-0.429,0.493" Height="32" Width="32" />
            
            <Button x:Name="Close_QR_btn"
        Style="{StaticResource CloseBtnStyle}"
        Click="Close_QR_btn_Click" Margin="0,4,10,0" />
        </Grid>
    </Border>
</Window>
